<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />

    <style>
      /*css*/
      div {
        margin: 2px;
        padding: 2px;
        width: 200px;
        height: 200px;
        position: relative;
        display: flex;
        float: left;
      }
      .rosso {
        background-color: crimson;
      }
      .giallo {
        background-color: rgb(227, 252, 8);
      }
      .blue {
        background-color: darkblue;
      }
      .verde {
        background-color: darkgreen;
      }
    </style>
  </head>
  <body>
    <div id="box1" class="rosso">
      <button
        onclick="cambiacoloreDelPrimo()"
        class="w3-button w3-black w3-round-large"
      >
        Change color
      </button>
    </div>
    <div id="box2" class="verde">
      <button
        onclick="cambiacoloreDelSecondo()"
        class="w3-button w3-black w3-round-large"
      >
        Change color
    </div>
    <div id="box3" class="blue">
      <button
        onclick="cambiacoloreDelTerzo()"
        class="w3-button w3-black w3-round-large"
      >
        Change color
    </div>
    <div id="box4" class="giallo">
      <button
        onclick="cambiacoloreDelQuarto()"
        class="w3-button w3-black w3-round-large"
      >
        Change color
    </div>

    <script>
      //javascript
      function cambiacoloreDelPrimo() {
        document.getElementById("box1").setAttribute("class", "blue");
      }
      function cambiacoloreDelSecondo() {
        document.getElementById("box2").setAttribute("class", "giallo");
      }
      function cambiacoloreDelTerzo() {
        document.getElementById("box3").setAttribute("class", "verde");
      }
      function cambiacoloreDelQuarto() {
        document.getElementById("box4").setAttribute("class", "rosso");
      }      
    </script>
  </body>
</html>
